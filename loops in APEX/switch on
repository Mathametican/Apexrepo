Integer x=3;
switch on x{
    when 1 {
        system.debug('x=1');
    }
when 2 {
    system.debug('x=2');
}
when 3 {
    system.debug('x=3');
}
}


Integer x=4;
switch on x{
    when 1 {
        system.debug('x=1');
    }
when 2 {
    system.debug('x=2');
}
when 3,4,5{
    system.debug('x='+x);
}
} 